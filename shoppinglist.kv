#:kivy 1.9.0
#:import ListView kivy.uix.listview
#:import ListAdapter kivy.adapters.listadapter.ListAdapter
#:import ListItemLabel kivy.uix.listview.ListItemLabel

<ShoppingList>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    orientation: "horizontal"
    spacing: int(self.height)/100

<Popup>:
    title_align: "center"
    size_hint: (.5, .3)
    separator_color: 178.0/255.0, 238.0/255.0, 238.0/255.0, 1

<PopupInput>:
    orientation: "vertical"

<TextInput>:
    multiline: False

<ListItemLabel>:
    font_size: int(self.width/50)
    font_name: 'data/fonts/Roboto/Roboto-Regular.ttf'
    color: 0, 0, 0, 1
    size_hint: (1, 1)

<ListView>:
    adapter:
        ListAdapter(
        data=[],
        cls=ListItemLabel)
