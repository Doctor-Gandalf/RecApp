#:kivy 1.9.0
#:import Widget kivy.uix.widget.Widget
#:import TopMenu userinterface.menus.TopMenu
#:import ShoppingList userinterface.shoppinglist.ShoppingList
#:import BottomMenu userinterface.menus.BottomMenu

MainScreen:

<MainScreen@Widget>:
    shopping_list: shopping_list

    TopMenu:
        # The top bar should take up one twentieth of
        # the total height (half that of the bottom menu).
        pos: root.x, root.height - root.height/20
        size: root.width, root.height/20

    ShoppingList:
        # The main part of the screen is the shopping list,
        # which contains a list viewing mechanism.
        id: shopping_list
        pos: root.x, root.y + root.height/10
        size: root.width, root.height - (3 * root.height/20)

    BottomMenu:
        # The bottom menu should contain all commands as buttons
        # and take up a tenth of the screen.
        pos: root.x, root.y
        size: root.width, root.height/10
