#:kivy 1.9.0

<ShoppingList>:
    canvas:
        Color:
            rgba: 0.698, 0.933, 0.933, 1
        Rectangle:
            pos: self.x, self.y
            size: self.width, self.height

<MainScreen>:
    shopping_list: shopping_list
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0.698, 0.933, 0.933, 1
        Rectangle:
            pos: self.width - self.width/10, self.y
            size: self.width - self.width/10, self.height
    Button:
        text: "Quit"
        font_size: 50
        font_name: 'data/fonts/Roboto/Roboto-Regular.ttf'
        color: 0, 0, 0, 1
        background_color: 0, 0, 0, 0
        pos: root.width - (root.width)/12, root.height - (root.height)/10
        on_release: exit()
    ShoppingList:
        id: shopping_list
        pos: root.x + root.width/12, root.y + root.height/8
        size: 3 * root.width/4, 3 * root.height/4
