#:kivy 1.9.0

<MainScreen>:
    ShoppingList:
        pos: root.x + root.width/10, root.y + root.height/5
        size: 4 * root.width/5, 7 * root.height/10

    MenuBar:
        pos: root.x, root.y
        size: root.width, root.height/10

<ShoppingList>
    canvas.before:
        Color:
            rgba: 0.698, 0.933, 0.933, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "Shopping List:"
        font_size: int(self.width/3)
        font_name: 'data/fonts/Roboto/Roboto-Regular.ttf'
        color: 0, 0, 0, 1
        center_x: root.center_x
        top: root.top

<SimpleButton>:
    font_name: 'data/fonts/Roboto/Roboto-Regular.ttf'
    font_size: int(self.width)/5
    halign: "center"
    pos_hint_y: "center"
    size_hint: (.07, 1)
    color: 0, 0, 0, 1
    background_normal: ''
    background_color: 0.698, 0.933, 0.933, 1

<MenuBar>:
    canvas.before:
        Color:
            rgba: 0.698, 0.933, 0.933, 1
        Rectangle:
            pos: self.x, self.y
            size: self.width, self.height

    orientation: "horizontal"
    spacing: int(self.height)/100

    SimpleButton:
        text: "Quit"
        font_size: 3 * int(self.width)/8
        on_release: exit()

    SimpleButton:
        text: "Clear"
        font_size: 3 * int(self.width)/8

    SimpleButton:
        text: "Add\nitem"

    SimpleButton:
        text: "Add\nrecipe"

    SimpleButton:
        text: "Remove\nitem"

    SimpleButton:
        text: "Remove\nrecipe"

    SimpleButton:
        text: "Save\nrecipe"

    SimpleButton:
        text: "Save\nlist"

    SimpleButton:
        text: "Load\nrecipe"

    SimpleButton:
        text: "Load\nlist"
