#:kivy 1.9.0

<MainScreen>:
    shopping_list: shopping_list

    canvas.before:
        Color:
            rgba: 0.698, 0.933, 0.933, 1
        Rectangle:
            pos: self.width - self.width/10, self.y
            size: self.width - self.width/10, self.height
        Color:
            rgba: 0.475, 0.118, 0.133, .50
        Rectangle:
            pos: self.x, self.y
            size: self.width - root.width/10, self.height

    Button:
        text: "Quit"
        font_size: 50
        font_name: 'data/fonts/Roboto/Roboto-Regular.ttf'
        color: 0, 0, 0, 1
        background_color: 0, 0, 0, 0
        pos: root.width - root.width/12, root.height - root.height/10
        on_release: exit()

    Label:
        font_size: 30
        font_name: 'data/fonts/Roboto/Roboto-Regular.ttf'
        color: 1, 1, 1, 1
        center_x: root.center_x
        top: root.top
        text: str(root.pos)

    ShoppingList:
        id: shopping_list
        pos: root.x - root.width/12, root.y
